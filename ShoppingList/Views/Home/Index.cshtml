@model IndexViewModel

<form asp-action="NewList" asp-controller="Home" method="post">
    <div class="form-group">
        <input asp-for="@Model.NewList.UserId" type="hidden" value="@Model.NewList.UserId"/>
        <label for="@Model.NewList.ListName">List Name:</label>
        <input asp-for="@Model.NewList.ListName" maxlength="50" />
        <span asp-validation-for="@Model.NewList.ListName"></span>
    </div>
    <button>Oluştur</button>
</form>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Shopping Lists</th>
            <th scope="col">Details</th>
            <th scope="col">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var list in Model.Lists) {
            <tr>
                <td>@list.ListName</td>
                <td><a href="@Url.Action("ListDetails", "List", new { id = list.ListId })">Details</a></td>
                <td><a href="@Url.Action("GoShopping", "List", new { id = list.ListId })">Go Shopping</a></td>
            </tr>
        }
    </tbody>
</table>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}